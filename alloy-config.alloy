server:
  http:
    listen-addr: "0.0.0.0:12345"

storage:
  path: /var/lib/alloy/data

inputs:
  - name: nginx
    type: file
    path: /var/log/nginx/access.log
    format: json
    labels:
      job: "nginx_logs"

outputs:
  - name: loki
    type: loki
    url: "http://loki:3100/loki/api/v1/push"
    labels:
      source: "nginx"
